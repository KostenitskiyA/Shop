@page
@model Shop.Pages.RegistrationModel

<div class="container d-flex align-items-center w-25 h-100">
    <form class="form-control" method="post" asp-page-handler="Registration">
        <div class="form-group" style="margin-bottom: 5px;">
            <label asp-for="User.Authorization.Login"></label>
            <input class="form-control" type="text" asp-for="User.Authorization.Login" />
            <label asp-for="User.Authorization.Password"></label>
            <input class="form-control" type="password" asp-for="User.Authorization.Password" />
        </div>
        <div class="form-group" style="margin-bottom: 5px;">
            <label asp-for="User.Name"></label>
            <input class="form-control" type="text" asp-for="User.Name" />
            <label asp-for="User.RoleId"></label>
            <select asp-for="User.RoleId">
                @foreach (var role in Model.Roles)
                {
                    <option value="@role.Id">@role.Name</option>
                }
            </select>
            <input class="form-control" type="password" asp-for="User.RoleId" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        @Html.ValidationSummary()
    </form>
</div>